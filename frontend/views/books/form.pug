extends ../base.pug

block content
  #banner
    img(id="logo" src="https://storage.googleapis.com/london-bridge-photo-upload/1574551674650london.png")
    h1(id="title") BRIDGE
  #content
    #lhs
      form(method="POST", enctype="multipart/form-data")
        h2 Submit a Streetlight Maintenance Request
        .form-group
          label(for="description") Description
          textarea.form-control(type="text", rows="5", name="description", id="description", value=book.description)
        .form-group
          label(for="address") Address
          input.form-control(type="text", name="address", id="address", value=book.address)
        .form-group
          label(for="image") Geotagged Image of Streetlight
          input.form-control(type="file", name="image", id="image")
        .form-group.hidden
          label(for="imageUrl") Cover Image URL
          input.form-control(type="text", name="imageUrl", id="imageUrl", value=book.imageUrl)
        br
        button.btn.btn-success(type="submit") Submit Request
    